doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Form
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    link(rel='stylesheet' href='css/form.css')
  body
    img.img-fluid.mb-0(src='img/Header.PNG' alt='Header Image')
    .container
      form(action='/submit' method='POST' enctype='multipart/form-data')
        .row
          .col-sm
            h2 PASENGER INFORMATION
            label(for='fullname') Full Name:
            input#fullname(type='text' name='fullname')
            label(for='gender') Gender:
            select#gender(name='gender')
              option(value='') Select Gender
              option(value='male') Male
              option(value='female') Female
              option(value='other') Other
            label(for='dob') Date of Birth:
            input#dob(type='date' name='dob')
            label(for='nationality') Nationality:
            input#nationality(type='text' name='nationality')
          .col-sm
            h2 CONTACT INFORMATION
            label(for='phone') Phone Number:
            input#phone(type='tel' name='phone')
            label(for='email') Email Address:
            input#email(type='email' name='email')
            label(for='po-box') P.O. Box Number:
            input#po-box(type='text' name='po-box')
            label(for='emergency') Emergency Number:
            input#emergency(type='tel' name='emergency')
          .col-sm
            h2 FLIGHT INFORMATION
            label(for='passport') Passport Number:
            input#passport(type='text' name='passport')
            label(for='visa') Visa Document:
            input#visa(type='file' name='visa' accept='.pdf, .jpg, .jpeg, .png')
            label(for='departurecity') Departure City:
            input#departure-city(type='text' name='departure-city')
            label(for='destinationcity') Destination City:
            input#destination-city(type='text' name='destination-city')
            button(type='submit') Submit
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
    script(src='/js/form.js')
